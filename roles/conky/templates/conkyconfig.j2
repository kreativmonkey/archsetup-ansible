-- Conky config for {{ ansible_hostname }}

conky.config = {
    alignment = 'top_right',
    background = false,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'd9d7d6',
    default_shade_color = '000000',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'sans:size=10',
    gap_x = 60,
    gap_y = 60,
    minimum_height = 300,
    minimum_width = 250,
    maximum_width = 250,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
    override_utf8_locale = false,
    color1 = 'ffffff',
    color2 = '657F3D',
}

conky.text = [[
${color2}CPU ${color2}${cpubar cpu0}
${color2}RAM ${color2}${membar}

${color2}SYSTEM ${color2}${hr 2}
${color1}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

${color grey}File systems:$alignr $color${fs_used /}/${fs_size /} 
${color grey}${fs_bar 6 /}
 
 ${color grey}Networking:
Up:$color ${upspeed} ${color grey} - Down:$color ${downspeed}
${color2}KEYBOARD SHORTCUTS${color2}${hr 2}${color1}
Super+Space$alignr Change Tastaturlayout
Super+r$alignr Take screenshot
]]

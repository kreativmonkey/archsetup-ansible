-- Conky config for {{ ansible_hostname }}

conky.config = {
    alignment = 'top_right',
    background = false,
    cpu_avg_samples = 4,
    default_color = 'white',
    default_outline_color = 'grey',
    default_shade_color = 'black',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'sans:size=10',
    gap_x = 60,
    gap_y = 60,
    minimum_height = 300,
    minimum_width = 250,
    maximum_width = 250,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
    override_utf8_locale = false,
    color1 = 'ffffff',
    color2 = '657F3D',
}

conky.text = [[
$color${font}${font Open Sans:size=44}$alignr${time %H:%M}$font$color${font Open Sans:size=15}
$alignr${time %a}, ${time %d %b %Y}$font$color  

# NAME                                                                        
${font Open Sans:Bold:size=16}${color 4C7523} SEBASTIAN     

# System
${font Open Sans:Bold:size=10}${color 4C7523}SYSTEM ${hr 2}$color${font}${offset 1}
Kernel:$alignr$kernel 
Arch:$alignr$machine
Host:$alignr$nodename
Uptime:$alignr$uptime

Available updates:$alignr${execpi 3600 checkupdates | awk 'END { print (NR == 0 ? "System up to date" : NR " pkg" (NR > 1 ? "s" : "")); }'}

# Performance                                                    
${font Open Sans:Bold:size=10}${color 4C7523}PERFORMANCE ${hr 2}$color${font}${offset 1}
$color${font}CPU ${alignr} ${cpu} %   
${cpubar cpu0}
${color FF7878}${top name 1} ${alignr}${top pid 1} ${top cpu 1}%
${color FF7878}${top name 2} ${alignr}${top pid 2} ${top cpu 2}%
${color FF7878}${top name 3} ${alignr}${top pid 3} ${top cpu 3}%
${color FF7878}${top name 4} ${alignr}${top pid 4} ${top cpu 4}%

$color${font}RAM ${alignr}${mem}/${memmax}                          
${membar}
${color FF7878}${top_mem name 1} ${alignr}${top_mem pid 1} ${top_mem mem_res 1}
${color FF7878}${top_mem name 2} ${alignr}${top_mem pid 2} ${top_mem mem_res 2}
${color FF7878}${top_mem name 3} ${alignr}${top_mem pid 3} ${top_mem mem_res 3}
${color FF7878}${top_mem name 4} ${alignr}${top_mem pid 4} ${top_mem mem_res 4}

$color${font}Temperature $alignr ${exec sensors k10temp-pci-00c3 | grep 'Tdie' | cut -c16-19}Â°C

# SSD intel M.2 2280 1TB                                                      
${font Open Sans:Bold:size=10}${color 4C7523}SSD-Intel-M.2-2280-1TB ${hr 2}$color${font}${offset 1}
${color}home (${fs_type /home}) $alignr ${fs_used /home/}/${fs_size /home/}
${fs_bar 6 /home/}

${font Open Sans:Bold:size=10}${color 4C7523}KEYBOARD SHORTCUTS ${hr 2}${color}${font}${offset 1}
Super+Space$alignr Change Tastaturlayout
Super+r$alignr Take screenshot
]]
